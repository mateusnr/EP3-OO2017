<p id="notice"><%= notice %></p>

<%= link_to "Sair", destroy_user_session_path, method: :delete %>
<h1>Lista de livros</h1>
<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th>Gênero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= link_to 'Mostrar', book %></td>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td><%= link_to 'Apagar', book, method: :delete, data: { confirm: 'Você tem certeza que deseja apagar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo livro', new_book_path %>